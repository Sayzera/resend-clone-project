generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
    ROLE_ADMIN
    ROLE_USER
    ROLE_ASISTAN
}

model User {
  id       String @id @default(cuid())
  name     String
  surname  String
  email    String @unique
  age      Int
  password String
  Role   Role @default(ROLE_USER)
}
